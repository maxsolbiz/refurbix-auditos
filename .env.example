# =============================================================================
# RefurbiX AuditOS - Environment Configuration
# =============================================================================

# Application
NODE_ENV=development
VERSION=1.0.0-dev

# Database
POSTGRES_PASSWORD=refurbix_secure_password
DATABASE_URL=postgresql://postgres:refurbix_secure_password@localhost:5432/refurbix

# Redis
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# InfluxDB
INFLUXDB_PASSWORD=refurbix_influx_password
INFLUXDB_TOKEN=refurbix-dev-token-change-in-production

# MinIO S3 Storage
MINIO_ACCESS_KEY=refurbix_minio_user
MINIO_SECRET_KEY=refurbix_minio_password

# Email Configuration
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@refurbix.com

# External APIs
# Add your external API keys here

# Monitoring
GRAFANA_PASSWORD=refurbix_grafana_password
PGADMIN_PASSWORD=refurbix_pgadmin_password

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_DEBUG_LOGS=true
ENABLE_METRICS=true